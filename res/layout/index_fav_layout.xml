<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:favgrid="http://schemas.android.com/apk/res/com.kukuai.daohang"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.fujun.browser.view.FavGridLayout
        android:id="@+id/fav_grid"
        favgrid:columnCount="3"
        favgrid:cellHeight="100.0dp"
        favgrid:horizontalGap="@dimen/grid_view_horizontal_space"
        favgrid:verticalGap="@dimen/grid_view_vertical_space"
        android:padding="@dimen/grid_view_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        
</ScrollView>