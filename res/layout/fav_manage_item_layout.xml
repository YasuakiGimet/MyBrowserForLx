<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <CheckBox
        android:id="@+id/fav_manage_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7.0dp"
        android:background="@drawable/check_box_bg"
        android:button="@null" />
    
    <ImageView
        android:layout_marginRight="14.0dp"
        android:id="@+id/fav_manage_item_edit"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7.0dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_fav_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        style="@style/fillx"
        android:layout_marginLeft="5.0dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fav_manage_item_edit"
        android:layout_toRightOf="@id/fav_manage_item_checkbox"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fav_manage_item_title"
            style="@style/fillx"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_color_normal"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/fav_manage_item_url"
            style="@style/fillx"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="15.0sp" />
    </LinearLayout>

</RelativeLayout>